<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" >

	<TextBlock Name="txtProgress" Foreground="WhiteSmoke" FontSize="20" Text="0%" HorizontalAlignment="Center" Grid.Row="1"></TextBlock>
	<Grid Margin="0" Height="80">
		<Rectangle Name="progressBg"  Stroke="Black" StrokeThickness="2" Height="40" Margin="0,0,0,0" HorizontalAlignment="Left"  Width="450" Grid.Row="2"></Rectangle>
		<Rectangle Name="progressBar" Height="38" Grid.Row="2" Width="0" HorizontalAlignment="Left">
			<Rectangle.Fill>
				<LinearGradientBrush>
					<GradientStop Color="White" Offset="0.5"></GradientStop>
					<GradientStop Color="Cyan" Offset="1"></GradientStop>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
	</Grid>
</StackPanel>