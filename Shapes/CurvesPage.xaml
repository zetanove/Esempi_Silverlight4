<UserControl x:Class="Shapes.CurvesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Canvas x:Name="LayoutRoot" Background="White">
        <Path Stroke="Black" StrokeThickness="2" Width="200" Height="200">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="10,10" IsClosed="False">
                        <BezierSegment Point1="100,20" Point2="100,180" Point3="200,200"/> 
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Line Width="110" Height="30" Stroke="Gray" X1="10" Y1="10" X2="100" Y2="20" StrokeThickness="2" StrokeDashArray="2 2"></Line> 
        <Ellipse Fill="Red" Canvas.Left="100" Canvas.Top="15" Width="10" Height="10" ></Ellipse>
        <Ellipse Fill="Red" Canvas.Left="100" Canvas.Top="180" Width="10" Height="10" ></Ellipse>
        <Line Width="400" Height="400" Stroke="Gray" X1="105" Y1="185" X2="200" Y2="200" StrokeThickness="2" StrokeDashArray="2 2"></Line>
    </Canvas>
</UserControl>
