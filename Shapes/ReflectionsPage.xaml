<UserControl x:Class="Shapes.ReflectionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Image Height="150" HorizontalAlignment="Left" Margin="20,12,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="200" Source="/Shapes;component/Images/panorama.png"/>
        <Image Height="150" HorizontalAlignment="Left" Margin="20,12,0,0" Name="imageMirror" Stretch="Fill" VerticalAlignment="Top" Width="200" Source="/Shapes;component/Images/panorama.png" Opacity="0.2" >
            <Image.RenderTransform>
                <CompositeTransform TranslateY="225" ScaleY="-0.5"></CompositeTransform>
            </Image.RenderTransform>
        </Image>    
    </Grid>
</UserControl>
