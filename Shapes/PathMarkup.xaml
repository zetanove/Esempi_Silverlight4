<UserControl x:Class="Shapes.PathMarkup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="400" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Path StrokeThickness="1.0" Stroke="#ff231f20"  Fill="#ffffff00" Data="F1 M 115,166 L 239,90 L 130,9. C 130,9 45,-55 5,158 C -34,372 173,363 199,321 C 225,279 247,220 247,220 L 115,166 Z" Margin="0,0,0,38" />
        <Path  StrokeThickness="20.0" Stroke="#ff231f20"  Data="F1 M 129,55 C 112,53 112,82 136,78 C 164,75 128,61 127,53"/>

        <Path Stroke="Red" StrokeThickness="2" Grid.Row="1" >
            <Path.Data>
                <GeometryGroup>
                    <LineGeometry StartPoint="10,10" EndPoint="100,100"></LineGeometry>
                    <LineGeometry StartPoint="100,100" EndPoint="200,50"></LineGeometry>
                    <LineGeometry StartPoint="200,50" EndPoint="10,10"></LineGeometry>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>
