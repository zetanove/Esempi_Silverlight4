<UserControl x:Class="LayoutContainers.StackPanelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <StackPanel >
        <StackPanel Width="300" Visibility="Visible" Margin="10" Background="Azure">
        <Button HorizontalAlignment="Left">Button 1</Button>
        <Button HorizontalAlignment="Center">Button 2</Button>
        <Button HorizontalAlignment="Right">Button 2</Button>
    </StackPanel>
        
        <StackPanel>
            <StackPanel Height="30" Background="White" Orientation="Horizontal">
                <TextBlock  Width="80" VerticalAlignment="Center" Margin="10 0 10 0">Username:</TextBlock>
                <TextBox Width="200" Margin="0 2 0 2"></TextBox>
            </StackPanel>
            <StackPanel Height="30" Background="White" Orientation="Horizontal">
                <TextBlock Width="80" VerticalAlignment="Center" Margin="10 0 10 0">Password:</TextBlock>
                <PasswordBox Width="200" Margin="0 2 0 2"></PasswordBox>
                <Button Content="Login" Margin="5 2 0 2" HorizontalAlignment="Right"></Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
