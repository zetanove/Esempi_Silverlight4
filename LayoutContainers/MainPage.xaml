<UserControl x:Class="LayoutContainers.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400" d:DesignWidth="400">
        <StackPanel>
            <StackPanel Height="30" Orientation="Horizontal" Margin="0 0 0 20">
                <Button x:Name="btCanvas" Click="btCanvas_Click">Canvas</Button>
                <Button x:Name="btStackPanel" Click="btStackPanel_Click">StackPanel</Button>
                <Button x:Name="btGrid" Click="btGrid_Click">Grid</Button>
                <Button x:Name="btGridLogin" Click="btGridLogin_Click">Grid 2</Button>
                <Button x:Name="btWrapPanel" Click="btWrapPanel_Click">WrapPanel</Button>
                <Button x:Name="btDockPanel" Click="btDockPanel_Click">DockPanel</Button>
            <Button x:Name="btRadialPanel" Click="btRadialPanel_Click">RadialPanel</Button>
        </StackPanel>
        <Grid Name="theContainer" Height="350">
            <Border Margin="20" BorderBrush="#000000" Background="Red" BorderThickness="2" CornerRadius="15">
                <Grid x:Name="LayoutRoot" Height="230"></Grid>
            </Border>
        </Grid>
        </StackPanel>
    
</UserControl>
