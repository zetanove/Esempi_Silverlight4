<UserControl x:Class="Printing.ScaleToFitPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Image Stretch="None"  Name="img" Source="/Printing;component/Images/Penguins.jpg">
            
        </Image>
        <Button  Content="Print" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="btPrint" VerticalAlignment="Top" Width="75" Click="btPrint_Click" />
    </Grid>
</UserControl>
