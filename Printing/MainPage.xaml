<UserControl x:Class="Printing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
     d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="230*" />
        </Grid.RowDefinitions>
        <toolkit:WrapPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.RowSpan="1">
            <Button x:Name="btSimplePrinting" Margin="2" Click="btSimplePrinting_Click">simple printing</Button>
            <Button x:Name="btResizePrinting" Margin="2" Click="btResizePrinting_Click">resize printing</Button>
            <Button x:Name="btScaleTofit" Margin="2" Click="btScaleTofit_Click">scale to fit</Button>

        </toolkit:WrapPanel>
        <Grid Margin="10" Name="theContainer" Grid.Row="1"></Grid>
    </Grid>
</UserControl>
