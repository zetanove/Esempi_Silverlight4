<UserControl x:Class="Multimedia.CaptureScreenshotVideo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel Orientation="Vertical" 
    HorizontalAlignment="Stretch" Margin="10">

        <Border HorizontalAlignment="Center" VerticalAlignment="Top">
            <Border>
                <MediaElement Height="200" Width="300" Source="video.wmv" x:Name="myMediaElement" Stretch="None" 
                MouseLeftButtonDown="myMediaElement_MouseLeftButtonDown"/>
            </Border>
        </Border>
        <TextBlock Margin="10 10 0 0">Screenshot (clicca per rimuoverli):</TextBlock>
        <StackPanel x:Name="screenshots" Orientation="Horizontal" 
        Margin="10,10,10,10">
        </StackPanel>

    </StackPanel>

</UserControl>
